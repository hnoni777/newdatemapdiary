<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_manual_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_manual_step_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_manual_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="주요 기능 제목"
        android:textColor="#221018"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_manual_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_manual_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기능에 대한 상세 설명이 여기에 들어갑니다. 스와이프하여 다음 기능을 확인해보세요."
            android:textColor="#666666"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:gravity="center_horizontal" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
