<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_manual_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_manual_step_1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/card_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_feature_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gold_heart" />

        <TextView
            android:id="@+id/tv_manual_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요 기능 제목"
            android:textColor="#221018"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_manual_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기능에 대한 상세 설명이 여기에 들어갑니다. 스와이프하여 다음 기능을 확인해보세요."
            android:textColor="#555555"
            android:textSize="15sp"
            android:lineSpacingExtra="5dp"
            android:gravity="center_horizontal" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
