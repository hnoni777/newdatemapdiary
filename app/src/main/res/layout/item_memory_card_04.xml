<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="24dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="false">

    <!-- Wrapper FrameLayout to allow stickers anywhere on the card -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- â­ NEW: High-End Custom Background Image Layer -->
        <ImageView
            android:id="@+id/card_premium_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/card_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF">

            <!-- ðŸ“¸ Image Area: Modern Polaroid Look -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/card_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ“ Premium Typography Area -->
            <LinearLayout
                android:id="@+id/card_text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:background="@android:color/transparent">

                <!-- ðŸ’¬ Romantic Message (Serif style for premium look) -->
                <TextView
                    android:id="@+id/card_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ì–¸ì  ê°€ ë„ˆì™€ ë‹¤ì‹œ ì˜¤ê³  ì‹¶ì€ ìž¥ì†Œ"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/kyobo_hand_family"
                    android:textColor="#221018"
                    android:gravity="center"
                    android:letterSpacing="0.01" />

                <!-- ðŸ“ Location Label with elegant design -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_gold_pill_button"
                    android:backgroundTint="#1A221018"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">
                    
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_white_location"
                        app:tint="#8C8C8C"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/card_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ê²½ê¸°ë„ ê´‘ëª…ì‹œ ì†Œí•˜ë¡œ 10"
                        android:fontFamily="@font/kyobo_hand_family"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- ðŸ“… Date, Branding, and QR Code Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <!-- Left: Date and Watermark -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/card_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2026.02.25"
                            android:textSize="13sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/kyobo_hand_family"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/card_watermark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HereWithYou"
                            android:textStyle="italic|bold"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/kyobo_hand_family"
                            android:textColor="#D4AF37"
                            android:alpha="0.8"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- Right: QR Code -->
                    <ImageView
                        android:id="@+id/card_qr_code"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/white"
                        android:padding="2dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- â­ NEW: High-End Gold Border Overlay (Stretches with content) -->
        <View
            android:id="@+id/card_premium_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <!-- ðŸŽ€ Dedicated Sticker Container (Overlay on entire card) -->
        <!-- Placed after LinearLayout so it draws on top of everything -->
        <FrameLayout
            android:id="@+id/sticker_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            
    </FrameLayout>
</androidx.cardview.widget.CardView>