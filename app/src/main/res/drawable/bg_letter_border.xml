<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Classic Letter Frame Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <!-- Muted brown/sepia tone for a vintage letter look -->
            <stroke android:width="1.5dp" android:color="#A68966" />
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>
    
    <!-- Decorative Corner Accents (Simple thin line) -->
    <item>
        <inset android:insetLeft="4dp" android:insetTop="4dp" android:insetRight="4dp" android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/>
                <stroke android:width="0.5dp" android:color="#CAB59D" />
            </shape>
        </inset>
    </item>
</layer-list>
