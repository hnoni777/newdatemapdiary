<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Embossed outer line (highlights) -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1.5dp" android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Embossed inner line (shadows) -->
    <item android:top="17dp" android:bottom="15dp" android:left="17dp" android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="#E1DCD3"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Dark elegant inner line -->
    <item android:top="22dp" android:bottom="22dp" android:left="22dp" android:right="22dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dp" android:color="#DCD4C7"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
