<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Premium Gold Border -->
    <item>
        <shape android:shape="rectangle">
            <!-- Transparent background so the texture image behind it shows! -->
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="#D4AF37" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    
    <!-- Inner Fine Elegant Gold Line -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="#EFD489" />
        </shape>
    </item>
</layer-list>
