<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Background: Soft Frosted Cream to Peach Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF9F5"
                android:centerColor="#FFEFE7"
                android:endColor="#FBE3D3"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Outer Premium Gold Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#D4AF37" />
            <!-- Padding allows the inner line to have space -->
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    
    <!-- Inner Fine Elegant Gold Line -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#EFD489" />
            <!-- Soft semi-transparent overlay to give frosted feel -->
            <solid android:color="#66FFFFFF"/>
        </shape>
    </item>
</layer-list>
