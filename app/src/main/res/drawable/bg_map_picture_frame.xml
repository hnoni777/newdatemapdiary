<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 아웃라인 고급 프레임 (우디/따뜻한 톤) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <!-- 살짝 두께감이 있는 크림 베이지 프레임 -->
            <stroke android:width="12dp" android:color="#F5ECE4" /> 
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- 이너 씬(Thin) 프레임 (로즈골드/골드 톤) -->
    <item android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <!-- 얇은 골드 라인 -->
            <stroke android:width="2dp" android:color="#D4AF37" /> 
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
